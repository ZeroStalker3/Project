<Page x:Class="Project.PageForFunctionalRequirements.PageEditForAddEmploye.PageMessageAndComment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project.PageForFunctionalRequirements.PageEditForAddEmploye"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMessageAndComment">

    <Grid>
        <StackPanel>
            <Button 
                Name="Back"
                Click="Back_OnClick"
                Style="{StaticResource BtnTransparent}"/>
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <TextBlock
                    FontSize="16pt"
                    Margin="5"
                    Text="Введите комментарий к работе"/>
                <TextBox
                    Height="30"
                    Width="300"
                    Name="TxbProblem"/>
                <Button
                    Content="Сохранить"
                    Style="{StaticResource 'Accept Button'}"
                    Name="Save"
                    Click="Save_OnClick"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
